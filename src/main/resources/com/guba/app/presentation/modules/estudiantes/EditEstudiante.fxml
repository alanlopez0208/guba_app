<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="10"
      fx:controller="com.guba.app.controllers.estudiantes.EditController">
    <padding>
        <Insets left="20" right="20"/>
    </padding>
    <HBox>
        <Button fx:id="backButton" onAction="#regresarAPanel" styleClass="btn, btnBack">
            <graphic>
                <FontIcon fill="white" iconLiteral="mdi-arrow-left-bold" iconSize="15" />
            </graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Actualizar" styleClass="btnEdit" onAction="#guardarEstudiante">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>
        </Button>
    </HBox>
    <HBox spacing="20">
        <VBox alignment="TOP_CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="10">
                <Circle fx:id="fotoEstudiante" fill="DODGERBLUE" radius="80.0" stroke="BLACK" strokeType="INSIDE" />
                <VBox alignment="CENTER" spacing="10">
                    <Button onAction="#abrirCamara" styleClass="btnCamera">
                        <graphic>
                            <FontIcon  iconLiteral="mdi-camera" styleClass="iconFills"/>
                        </graphic>
                    </Button>
                    <Button onAction="#abrirArchivos" styleClass="btnCamera">
                        <graphic>
                            <FontIcon iconLiteral="mdi-image" styleClass="iconFills"/>
                        </graphic>
                    </Button>
                    <Button onAction="#borrarFoto" styleClass="btnCamera">
                        <graphic>
                            <FontIcon  iconLiteral="mdi-delete"  styleClass="iconFills"/>
                        </graphic>
                    </Button>
                </VBox>
            </HBox>
            <VBox fillWidth="false" maxWidth="Infinity" spacing="10.0">
                <Label text="Matricula" />
                <TextField fx:id="txtMatricula" prefWidth="200" styleClass="textField" />
            </VBox>
            <HBox fillHeight="false" spacing="20.0">
                <VBox fillWidth="false" spacing="10.0">
                    <Label text="Nombre" />
                    <TextField fx:id="txtNombre" prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox fillWidth="false" spacing="10.0">
                    <Label text="Apellido Paterno" />
                    <TextField fx:id="txtApPat" prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox fillWidth="false" spacing="10.0">
                    <Label text="Apellido Materno" />
                    <TextField fx:id="txtApMat" prefWidth="150" styleClass="textField" />
                </VBox>
            </HBox>
            <VBox spacing="10.0">
                <Label text="Carrera" />
                <ComboBox fx:id="comboCarrera" styleClass="combo" />
            </VBox>
            <HBox fillHeight="false" spacing="20.0">
                <VBox fillWidth="false" spacing="10.0">
                    <Label text="Estatus" />
                    <ComboBox fx:id="comboStatus" styleClass="combo" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="Semestre" />
                    <ComboBox fx:id="comboSemestre" styleClass="combo"  />
                </VBox>
            </HBox>
            <VBox spacing="10.0">
                <Label text="Generacion" />
                <TextField fx:id="txtGeneracion" styleClass="textField" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Correo Institucional" />
                <TextField fx:id="txtCorreoInst" styleClass="textField" />
            </VBox>
        </VBox>
        <VBox spacing="15.0" HBox.hgrow="ALWAYS">
            <VBox spacing="10.0">
                <Label text="Correo Personal" />
                <TextField fx:id="txtCorreoPer" styleClass="textField" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Numero de telefono" />
                <TextField styleClass="textField" fx:id="txtCelular"/>
            </VBox>
            <VBox spacing="10.0">
                <Label text="Sexo" />
                <ComboBox fx:id="comboSexo" styleClass="combo" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Nacimiento" />
                <DatePicker fx:id="comboNacimiento" styleClass="calendario" editable="false"/>
            </VBox>
            <VBox spacing="10.0">
                <Label text="Direccion" />
                <TextField fx:id="txtDireccion" styleClass="textField" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Escuela de Procedencia" />
                <TextField fx:id="txtEscuelaProc" styleClass="textField" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Ãšltimos Grados de Estudio" />
                <TextField fx:id="txtGrado" styleClass="textField" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Municipio" />
                <TextField fx:id="txtMunicipio" styleClass="textField" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Estado" />
                <TextField fx:id="txtEstado" styleClass="textField" />
            </VBox>
        </VBox>
    </HBox>

</VBox>
