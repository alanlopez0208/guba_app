<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root type="VBox" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER_LEFT" spacing="30">
    <HBox>
        <Button fx:id="backButton" styleClass="btn, btnBack">
            <graphic>
                <FontIcon fill="white" iconLiteral="mdi-arrow-left-bold" iconSize="15" />
            </graphic>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnGuardar" text="Guardar" styleClass="btnsAgregar">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>
        </Button>
    </HBox>
    <padding>
        <Insets left="50" right="50"/>
    </padding>

    <VBox VBox.vgrow="ALWAYS" alignment="CENTER" spacing="10">
        <Label text="Materia" styleClass="titulo" maxWidth="Infinity" textAlignment="LEFT"/>
        <HBox spacing="50" >
            <VBox HBox.hgrow="ALWAYS" spacing="20">
                <VBox spacing="10.0">
                    <Label text="Nombre:" />
                    <TextField fx:id="txtNombre"  prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox  spacing="10.0">
                    <Label text="Modalidad:" />
                    <TextField fx:id="txtModalidad"  prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="HCBA:" />
                    <TextField fx:id="txtHbca"   prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="HTI:" />
                    <TextField fx:id="txtHti"  prefWidth="150" styleClass="textField" />
                </VBox>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" spacing="20">
                <VBox  spacing="10.0">
                    <Label text="Semestre" />
                    <TextField fx:id="txtSemestre"  prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="Clave: " />
                    <TextField fx:id="txtClave"   prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox  spacing="10.0">
                    <Label text="Creditos: " />
                    <TextField fx:id="txtCreditos"  prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox  spacing="10.0">
                    <Label text="Carrera: " />
                    <ComboBox fx:id="comboCarreras" prefWidth="150" styleClass="combo" minHeight="-Infinity" maxWidth="Infinity"/>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</fx:root>
