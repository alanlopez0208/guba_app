<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.guba.app.controllers.materias.DetailsController"
      alignment="CENTER_LEFT" spacing="30">
    <Button fx:id="backButton" onAction="#regresarAPanel" styleClass="btn, btnBack">
        <graphic>
            <FontIcon fill="white" iconLiteral="mdi-arrow-left-bold" iconSize="15" />
        </graphic>
    </Button>
    <padding>
        <Insets left="50" right="50"/>
    </padding>

    <VBox VBox.vgrow="ALWAYS" alignment="CENTER" spacing="10">
        <Label text="Materia" styleClass="titulo" maxWidth="Infinity" textAlignment="LEFT"/>
        <HBox spacing="50" >
            <VBox HBox.hgrow="ALWAYS" spacing="20">
                <VBox spacing="10.0">
                    <Label text="Nombre:" />
                    <TextField fx:id="txtNombre" editable="false" prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox  spacing="10.0">
                    <Label text="Modalidad:" />
                    <TextField fx:id="txtModalidad" editable="false" prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="HCBA:" />
                    <TextField fx:id="txtHbca" editable="false"  prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="HTI:" />
                    <TextField fx:id="txtHti" editable="false" prefWidth="150" styleClass="textField" />
                </VBox>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" spacing="20">
                <VBox  spacing="10.0">
                    <Label text="Semestre" />
                    <TextField fx:id="txtSemestre" editable="false" prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox spacing="10.0">
                    <Label text="Clave: " />
                    <TextField fx:id="txtClave" editable="false"  prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox  spacing="10.0">
                    <Label text="Creditos: " />
                    <TextField fx:id="txtCreditos" editable="false" prefWidth="150" styleClass="textField" />
                </VBox>
                <VBox  spacing="10.0">
                    <Label text="Carrera: " />
                    <ComboBox fx:id="comboCarreras" prefWidth="150" styleClass="combo" minHeight="-Infinity" maxWidth="Infinity" disable="true"/>
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</VBox>
